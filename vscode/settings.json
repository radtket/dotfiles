{
	"editor.cursorBlinking": "solid",
	"editor.cursorStyle": "line",
	"editor.cursorWidth": 5,
	"editor.find.seedSearchStringFromSelection": true,
	"editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
	"editor.fontLigatures": true,
	"editor.fontSize": 14,
	"editor.fontWeight": "400",
	"editor.formatOnPaste": true,
	"editor.largeFileOptimizations": false,
	"editor.letterSpacing": 0.5,
	"editor.lineHeight": 21,
	"editor.matchBrackets": true,
	"editor.minimap.enabled": false,
	"editor.multiCursorModifier": "ctrlCmd",
	"editor.parameterHints.enabled": false,
	"editor.renderWhitespace": "none",
	"editor.scrollBeyondLastLine": true,
	"editor.showFoldingControls": "always",
	"editor.tabSize": 2,
	"editor.useTabStops": true,
	"editor.wordWrap": "on",
	"eslint.alwaysShowStatus": true,
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"html.format.enable": true,
	"html.format.preserveNewLines": true,
	"window.closeWhenEmpty": true,
	"window.openFilesInNewWindow": "off",
	"workbench.colorTheme": "Cobalt2",
	"workbench.editor.enablePreview": true,
	"workbench.iconTheme": "vscode-icons",
	"editor.rulers": [80, 100],
	"eslint.workingDirectories": [
		{
			"mode": "auto"
		}
	],
	// "eslint.nodePath": "/Volumes/Macintosh HD/usr/local/lib/node_modules",
	// These are all my auto-save configs
	"editor.formatOnSave": true,
	// turn it off for JS
	"[javascript]": {
		"editor.formatOnSave": false
	},
	"[javascriptreact]": {
		"editor.formatOnSave": false
	},
	// Optional: If you have the prettier extension enabled for other languages like CSS and HTML, turn it off for JS since we are doing it through Eslint already
	"prettier.disableLanguages": ["js", "javascript", "javascriptreact"],
	"prettier.useTabs": true,
	"vscode_custom_css.imports": [
		"/Volumes/Macintosh HD/Users/taylorradtke/.vscodestyles.css"
	],
	"files.associations": {
		"*.js": "javascriptreact"
	},
	"prettier.trailingComma": "es5",
	"editor.wrappingIndent": "indent",
	"typescript.format.insertSpaceBeforeAndAfterBinaryOperators": false,
	"typescript.format.insertSpaceAfterCommaDelimiter": false,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
	"typescript.format.insertSpaceAfterTypeAssertion": true,
	"typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": true,
	"typescript.preferences.quoteStyle": "double",
	"eslint.autoFixOnSave": true,
	"window.zoomLevel": 0
}
